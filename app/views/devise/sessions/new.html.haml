.sessions_box
	%h2 Sign in
	= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html => {:class=>"well"}) do |f|
		= f.text_field :screen_name, :placeholder=>"Screen name", :class => "text_field"
		%br/
		= f.password_field :password, :placeholder=>"Password", :class => "text_field"

		- if devise_mapping.rememberable?
			= f.label :remember_me, :class => "checkbox" do
				= f.check_box :remember_me, :class=>"checkbox"
				%p Remember me
			
		.controls
			= f.submit "Sign in", :class=>"btn btn-primary"
			= link_to 'Sign up', new_registration_path(resource_name), :class=>"btn"

